<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- 1. Активация аннотаций -->
    <context:component-scan base-package="com.javalessons.springmvc" />
    <mvc:annotation-driven />

    <!-- === 2. КОНФИГУРАЦИЯ THYMELEAF === -->
    <!-- Бин 1: TemplateResolver (указывает, где искать HTML-шаблоны) -->
    <bean id="templateResolver" class="org.thymeleaf.spring6.templateresolver.SpringResourceTemplateResolver">
        <property name="prefix" value="/WEB-INF/views/" />  <!-- Папка с шаблонами -->
        <property name="suffix" value=".html" />           <!-- Расширение файлов -->
        <property name="templateMode" value="HTML" />      <!-- Режим шаблонов -->
        <property name="characterEncoding" value="UTF-8" /> <!-- Кодировка -->
    </bean>

    <!-- Бин 2: TemplateEngine (обработчик Thymeleaf) -->
    <bean id="templateEngine" class="org.thymeleaf.spring6.SpringTemplateEngine">
        <property name="templateResolver" ref="templateResolver" />
        <property name="enableSpringELCompiler" value="true" /> <!-- Поддержка SpEL -->
    </bean>

    <!-- Бин 3: ViewResolver (Thymeleaf) -->
    <bean class="org.thymeleaf.spring6.view.ThymeleafViewResolver">
        <property name="templateEngine" ref="templateEngine"/>
        <property name="order" value="1"/>
        <property name="viewNames" value="*"/>
    </bean>

</beans>